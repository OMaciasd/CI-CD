variables:
    TEST_VAR: "Begin - Continue all git submodule in projects."
    BRANCH: main

stages:
    - build
    - triggers

job1:
    stage: build
    script:
        - echo $TEST_VAR

trigger_A:
    stage: triggers
    when: on_success
    trigger:
        project: project/project_a # SPECIFY PROJECT TO RUN THE TRIGGER.
        branch: "$BRANCH"
